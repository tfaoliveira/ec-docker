export fn poly_basemul_jazz(reg u64 rp, reg u64 ap, reg u64 bp) 
{
  stack u16[KYBER_N] a;
  stack u16[KYBER_N] b;
  stack u16[KYBER_N] r;
  reg u16 t;
  inline int i;

  for i = 0 to KYBER_N {
    t = (u16)[ap + 2*i];
    a[i] = t;
    t = (u16)[bp + 2*i];
    b[i] = t;
    t = (u16)[rp + 2*i];
    r[i] = t;
  }

  a = _nttunpack(a);
  b = _nttunpack(b);
  r = _poly_basemul(r, a, b);
  r = _nttpack(r);

  for i = 0 to KYBER_N {
    t = r[i];
    (u16)[rp + 2*i] = t;
  }
}

